<h2 class="ui header">Control Panel</h2>

<div class="ui grid">
  <div class="four wide column">
    <h3 class="ui header">Navigation</h3>
    <div class="ui link list">
      {{#link-to "settings" class="item" }}Settings{{/link-to}}
    </div>
    <h3 class="ui header">Toolings</h3>
    <div class="ui message ignored">
      Upcoming feature
    </div>
  </div>
  <div class="twelve wide column">
    <table class="ui celled table">
      <thead>
        <tr>
          <th>Domain name</th>
          <th>Points to (IP)</th>
          <th>Last updated at</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |item| }}
        <tr>
          <td>{{item.domainName}}</td>
          <td>{{item.ip}}</td>
          <td>{{item.updatedAt}}</td>
        </tr>
        {{/each}}
      </tbody>
      <tfoot>
        <tr><th colspan="3">
          <div class="ui right floated pagination menu">
            <a class="icon item">
              <i class="left chevron icon"></i>
            </a>
            <a class="item">1</a>
            <a class="item">2</a>
            <a class="item">3</a>
            <a class="item">4</a>
            <a class="icon item">
              <i class="right chevron icon"></i>
            </a>
          </div>
        </th>
      </tr></tfoot>
    </table>
    <p>
      Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
